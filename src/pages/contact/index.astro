---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact â€” 7WW7">
  <section class="py-12">
    <h1 class="font-display text-4xl">Contact</h1>
    <p class="mt-4 max-w-2xl text-[var(--muted)]">
      Partnerships, programs, research collaborations, media, and institutional
      engagement.
    </p>

    <form
      class="mt-10 max-w-xl space-y-4 rounded-3xl border border-black/5 bg-white p-6 shadow-sm"
      name="contact"
      method="POST"
      data-netlify="true"
    >
      <input type="hidden" name="form-name" value="contact" />

      <label class="block">
        <span class="text-sm font-semibold">Name</span>
        <input
          name="name"
          required
          class="mt-1 w-full rounded-xl border border-black/10 px-3 py-2"
        />
      </label>

      <label class="block">
        <span class="text-sm font-semibold">Email</span>
        <input
          type="email"
          name="email"
          required
          class="mt-1 w-full rounded-xl border border-black/10 px-3 py-2"
        />
      </label>

      <label class="block">
        <span class="text-sm font-semibold">Message</span>
        <textarea
          name="message"
          rows="6"
          required
          class="mt-1 w-full rounded-xl border border-black/10 px-3 py-2"
        ></textarea>
      </label>

      <button
        class="rounded-full bg-[var(--ink)] px-5 py-3 text-sm font-semibold text-white hover:opacity-90 transition"
      >
        Send
      </button>
    </form>
  </section>
</BaseLayout>
