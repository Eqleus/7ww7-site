---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { CONTINENTS } from "../../data/continents";

export function getStaticPaths() {
  return CONTINENTS.map((c) => ({ params: { continent: c.slug } }));
}

const { continent } = Astro.params;
const data = CONTINENTS.find((c) => c.slug === continent);

if (!data) {
  throw new Error(`Unknown continent: ${continent}`);
}
---

<BaseLayout title={`${data.name} — 7WW7`}>
  <section class="py-12">
    <p class="text-sm font-semibold text-[var(--brand)]">Foundation</p>
    <h1 class="mt-3 font-display text-4xl">{data.name}</h1>
    <p class="mt-4 max-w-3xl text-lg text-[var(--muted)]">{data.tagline}</p>

    <div class="mt-10 grid gap-4 md:grid-cols-2">
      <div class="rounded-3xl border border-black/5 bg-white p-6 shadow-sm">
        <h2 class="font-display text-2xl">Focus areas</h2>
        <ul class="mt-4 space-y-2 text-[var(--muted)]">
          {
            data.focus.map((f) => (
              <li class="flex gap-2">
                <>
                  <span class="mt-2 h-2 w-2 rounded-full bg-[var(--brand2)]" />
                  <span>{f}</span>
                </>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="rounded-3xl border border-black/5 bg-white p-6 shadow-sm">
        <h2 class="font-display text-2xl">Key metrics</h2>
        <p class="mt-3 text-sm text-[var(--muted)]">
          Prototype dashboard fields (we’ll connect real data later).
        </p>
        <ul class="mt-4 space-y-2 text-[var(--muted)]">
          {
            data.metrics.map((m) => (
              <li class="flex gap-2">
                <>
                  <span class="mt-2 h-2 w-2 rounded-full bg-[var(--brand)]" />
                  <span>{m}</span>
                </>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="mt-10 rounded-3xl border border-black/5 bg-white p-8 shadow-sm">
      <h2 class="font-display text-2xl">Signature programs</h2>
      <div class="mt-6 grid gap-4 md:grid-cols-2">
        {
          data.signaturePrograms.map((p) => (
            <div class="rounded-2xl border border-black/5 bg-[var(--bg)] p-5">
              <div class="font-semibold">{p.title}</div>
              <div class="mt-2 text-sm text-[var(--muted)]">
                {p.description}
              </div>
            </div>
          ))
        }
      </div>

      <div class="mt-8 flex flex-wrap gap-3">
        <a
          href="/contact"
          class="rounded-full bg-[var(--ink)] px-5 py-3 text-sm font-semibold text-white hover:opacity-90 transition"
        >
          Partner with this foundation
        </a>
        <a
          href="/work"
          class="rounded-full border border-black/10 bg-white px-5 py-3 text-sm font-semibold hover:bg-black/[0.03] transition"
        >
          Back to all foundations
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
