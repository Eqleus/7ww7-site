---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { CONTINENTS } from "../../data/continents";
---

<BaseLayout title="Our work — 7WW7">
  <section class="py-12">
    <h1 class="font-display text-4xl">Our work</h1>
    <p class="mt-4 max-w-2xl text-[var(--muted)]">
      Seven interlinked foundations, one per continent — coordinated through
      shared metrics and a shared cadence.
    </p>

    <div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {
        CONTINENTS.map((c) => (
          <a
            href={`/work/${c.slug}`}
            class="group rounded-3xl border border-black/5 bg-white p-6 shadow-sm hover:shadow-md transition"
          >
            <div class="flex items-center justify-between">
              <div class="text-lg font-semibold">{c.name}</div>
              <span class="rounded-full bg-black/[0.04] px-3 py-1 text-xs text-[var(--muted)] group-hover:bg-[rgba(14,124,123,.10)] transition">
                Foundation
              </span>
            </div>
            <p class="mt-3 text-sm text-[var(--muted)]">{c.tagline}</p>
            <div class="mt-5 text-sm font-semibold text-[var(--brand)]">
              Explore →
            </div>
          </a>
        ))
      }
    </div>
  </section>
</BaseLayout>
